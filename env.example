# Environment variables for local development
# Copy this file to .env.local and update the values

# Application Database Connection
DATABASE_URL=postgresql://gamenight_user:gamenight_password@localhost:5432/gamenight
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamenight
DB_USER=gamenight_user
DB_PASSWORD=gamenight_password

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@gamenight.local
PGADMIN_DEFAULT_PASSWORD=admin123

# Application Configuration
NEXT_PUBLIC_APP_NAME="GameNight"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
SECRET_KEY="your-secret-key-here"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
